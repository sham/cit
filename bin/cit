#!/usr/bin/env node

const cac = require('cac')
const shell = require('shelljs')

if (!shell.which('git')) {
  shell.echo('Cit requires Git.')
  shell.exit(0)
}

const cli = cac()

cli.command('*', {
  desc: 'default'
}, (flags) => {
  if (flags.help) {
    cli.showHelp()
  } else {
    shell.echo('This is Cit.')
  }
})

cli.parse()